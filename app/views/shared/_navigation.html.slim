header
  /! Navigation bar
  nav
    .nav-wrapper
      a.brand-logo href=root_path
        .logo
          = image_tag 'final_1024x1024.png', size: '50x50'
        strong VHDLearning
      a.button-collapse data-activates="side-bar" href="#" 
        i.material-icons menu
      
      ul.right class="hide-on-med-and-down"
        - nav_global_links.each do |name, lnk|
          li
            = link_to lnk[:url]
              = icon_string lnk[:icon], class: 'left'
              = lnk[:text]
        - if user_signed_in?
          /! Dropdown for user
          ul#user-options class="dropdown-content"
            li
              = link_to user_path(current_user), class: 'black-text'
                i.material-icons class="left" face
                | Mi perfil
            li.divider
            li
              = link_to destroy_user_session_path, method: :delete, class: 'red-text'
                i.fa class="fa-sign-out left"
                | Salir
          li 
            a.nav-user class="dropdown-button" href="#!" data-activates="user-options"
              = image_tag current_user.image, size: '40x40'
              = current_user.nickname
              i class="material-icons right" arrow_drop_down
        - else
          - nav_reg_links.each do |name, lnk|
            li
              = link_to lnk[:url], class:"waves-effect waves-light btn"
                = icon_string lnk[:icon], class: 'left'
                = lnk[:text]
      ul#side-bar class="side-nav"
        li
          a href="sass.html"  Sass
        li
          a href="badges.html"  Components
        li
          a href="collapsible.html"  Javascript
        li
          a href="mobile.html"  Mobile